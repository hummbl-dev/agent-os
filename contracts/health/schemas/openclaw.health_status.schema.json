{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://founder-mode.dev/schemas/openclaw.health_status.schema.json",
  "title": "openclaw.health_status",
  "description": "Aggregated health status envelope for runtime health probes.",
  "type": "object",
  "required": ["status", "timestamp", "service", "checks", "summary"],
  "additionalProperties": false,
  "properties": {
    "status": {
      "type": "string",
      "enum": ["healthy", "degraded", "unhealthy", "unknown"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "service": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "latency_ms": {
      "type": "number",
      "minimum": 0
    },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/health_check"
      }
    },
    "summary": {
      "$ref": "#/$defs/summary"
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "$defs": {
    "health_check": {
      "type": "object",
      "required": ["name", "probe_type", "status", "message", "duration_ms", "timestamp"],
      "additionalProperties": false,
      "properties": {
        "name": {"type": "string", "minLength": 1},
        "probe_type": {
          "type": "string",
          "enum": ["liveness", "readiness", "startup"]
        },
        "status": {
          "type": "string",
          "enum": ["healthy", "degraded", "unhealthy", "unknown"]
        },
        "message": {"type": "string", "minLength": 1},
        "duration_ms": {"type": "number", "minimum": 0},
        "timestamp": {"type": "string", "format": "date-time"},
        "details": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "summary": {
      "type": "object",
      "required": ["total", "healthy", "degraded", "unhealthy", "unknown"],
      "additionalProperties": false,
      "properties": {
        "total": {"type": "integer", "minimum": 0},
        "healthy": {"type": "integer", "minimum": 0},
        "degraded": {"type": "integer", "minimum": 0},
        "unhealthy": {"type": "integer", "minimum": 0},
        "unknown": {"type": "integer", "minimum": 0}
      }
    }
  }
}
